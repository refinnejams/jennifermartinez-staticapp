{% extends '_layouts/base.njk' %}

{% block page_title %}{{entry.title}} from {{entry.date}}{% endblock %}

{% block description_description %}Ship's blogpost from {{ entry.date}}.{% endblock %}


{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <img src="img/pirate.jpg" alt="pirate character" class="img-fluid">
        <p class="byline">By Crit McGillicutty<br>
        <span>Island Breeze Tribune</span></p>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
        <h1>Entry headline goes here</h1>
        <p>Entry text goes here</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
